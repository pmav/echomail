{
  "name": "echomail",
  "description": "echomail is a command line tool to send mails using Mandrill API. You will need a Mandrill account, create one here: https://mandrill.com",
  "version": "1.0.0",
  "author": "pmav",
  "keywords": [
    "echomail", "mail", "sendmail", "mandrill", "cli"
  ],
  "main": "echomail",
  "bin": {
    "echomail": "./bin/echomail"
  },
  "engine": [
    "node >=0.6.0"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/pmav/echomail.git"
  },
  "dependencies": {
    "mandrill-api": "~1.0.41",
    "yargs": "~1.3.3"
  },
  "bugs": {
    "url": "https://github.com/pmav/echomail/issues"
  },
  "licenses":[{
    "type":"MIT",
    "url":"https://github.com/pmav/echomail/blob/master/LICENSE"
  }]
}
